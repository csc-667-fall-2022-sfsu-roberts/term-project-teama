<!-- 
    Title: The Lobby
    URI: /lobby
    View: lobby.handlebars
-->

{{> navbar}}
<main>
    <div class="row mt-5">
        <div class="col-6 ms-auto">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">Create A New Game</h5>
                </div>
                <div class="mx-auto">
                    <a href="/game/create" class="btn btn-primary my-3" role="button">Create New Game</a>
                </div>
            </div><br>
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">Engaged Games</h5>
                </div>
                <div class="ms-2">
                    <table class="engaged-game-list">
                        <tbody id="started-game">
                            {{#each startedGames}}
                            <tr id="game-info" class="engaged-game-info" data-gameid="{{this.game.id}}"
                                data-gamename="{{this.game.name}}">
                                <td>
                                    <p id="game-name"> {{this.game.name}}: </p>
                                </td>
                                <td>
                                    <p id="player-number"> {{this.numOfUsers}}/4 </p>
                                </td>
                                <td>
                                    <a href="/game/show/{{this.game.id}}" class="btn btn-primary my-3" role="button"
                                        id="view-game-btn">View</a>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                        <tbody id="en-game">
                            {{#each normalGames}}
                            <tr id="game-info" class="engaged-game-info" data-gameid="{{this.game.id}}"
                                data-gamename="{{this.game.name}}">
                                <td>
                                    <p id="game-name"> {{this.game.name}}: </p>
                                </td>
                                <td>
                                    <p id="player-number"> {{this.numOfUsers}}/4 </p>
                                </td>

                                <td>
                                    {{!-- <a href="/game/created/{{this.game.id}}" class="btn btn-primary my-3" role="button" --}}
                                        {{!-- id="view-game-btn">View</a> --}}

                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        id="viewGameDetails" data-bs-target="#gameDetails">
                                        View Game Details
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="gameDetails" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Game Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h5>Table Name: {{this.game.name}}</h5>
                                                    <h5>Players At This Table: {{this.numOfUsers}}/4</h5>
                                                    {{#each this.players}}
                                                    <div class="card d-flex flex-column mb-3">
                                                        <div class="card-body d-flex align-content-start">
                                                            <div class="player-left m-1 avatar avatar_{{user.avatar}}">
                                                            </div>
                                                            <div class="player-body">
                                                                <div class="mb-2">
                                                                    <span class="fs-5 ps-2">{{this.name}}</span>
                                                                    {{#if this.iscreator}}
                                                                    <small class="fs-6 ps-1">(table
                                                                        administrator)</small>
                                                                    {{/if}}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {{/each}}
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                {{#if this.isCreator}}
                                <td>

                                    <a href="#" class="btn btn-primary my-3" role="button" id="quit-game-btn"
                                        onclick="return quitBtn({{this.game.id}})">Quit</a>
                                </td>
                                <td>
                                    <a href="/game/show/{{this.game.id}}" target="_blank" class="btn btn-primary my-3"
                                        role="button" id="start-game-btn"
                                        onclick="return startBtn({{this.game.id}})">Start</a>
                                </td>
                                {{else}}
                                <td>
                                    <a href="#" class="btn btn-primary my-3" role="button" id="quit-game-btn"
                                        onclick="return quitBtn({{this.game.id}})">Quit</a>
                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div><br>
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">Not Engaged Games</h5>
                </div>
                <div class="ms-2">
                    <table class="not-engaged-games-list">
                        <thead>
                            <tr>
                                <th>Available Games</th>
                            </tr>
                        </thead>
                        <tbody id="no-en-game">
                            {{!-- {{#each notEngagedGames as | notEngagedGames |}} --}}
                            {{#each notEngagedGames}}
                            <tr id="game-info" class="not-en-game-info" data-gameid="{{this.game.id}}"
                                data-gamename="{{this.game.name}}">
                                <td>
                                    <p id="game-name"> {{this.game.name}}: </p>
                                </td>
                                <td>
                                    <p id="player-number"> {{this.numOfUsers}}/4 </p>
                                </td>
                                <td>
                                    {{!-- <a href="/game/created/{{this.game.id}}" class="btn btn-primary my-3" role="button" --}}
                                        {{!-- id="view-game-btn">View</a> --}}
                                    
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        id="viewGameDetails" data-bs-target="#gameDetails">
                                        View Game Details
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="gameDetails" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Game Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h5>Table Name: {{this.game.name}}</h5>
                                                    <h5>Players At This Table: {{this.numOfUsers}}/4</h5>
                                                    {{#each this.players}}
                                                    <div class="card d-flex flex-column mb-3">
                                                        <div class="card-body d-flex align-content-start">
                                                            <div class="player-left m-1 avatar avatar_{{user.avatar}}">
                                                            </div>
                                                            <div class="player-body">
                                                                <div class="mb-2">
                                                                    <span class="fs-5 ps-2">{{this.name}}</span>
                                                                    {{#if this.iscreator}}
                                                                    <small class="fs-6 ps-1">(table
                                                                        administrator)</small>
                                                                    {{/if}}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {{/each}}
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-primary my-3" role="button" id="join-game-btn"
                                        onclick="return joinBtn({{this.game.id}})">Join</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <thead>
                            <tr>
                                <th>Full Games</th>
                            </tr>
                        </thead>
                        <tbody id="full-game">
                            {{#each fullGames}}
                            <tr id="game-info" class="full-game-info" data-gameid="{{this.game.id}}"
                                data-gamename="{{this.game.name}}">
                                <td>
                                    <p id="game-name"> {{this.game.name}}: </p>
                                </td>
                                <td>
                                    {{!-- <a href="/game/created/{{this.game.id}}" class="btn btn-primary my-3" role="button" --}}
                                        {{!-- id="view-game-btn">View</a> --}}

                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                        id="viewGameDetails" data-bs-target="#gameDetails">
                                        View Game Details
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="gameDetails" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Game Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h5>Table Name: {{this.game.name}}</h5>
                                                    <h5>Players At This Table: {{this.numOfUsers}}/4</h5>
                                                    {{#each this.players}}
                                                    <div class="card d-flex flex-column mb-3">
                                                        <div class="card-body d-flex align-content-start">
                                                            <div class="player-left m-1 avatar avatar_{{user.avatar}}">
                                                            </div>
                                                            <div class="player-body">
                                                                <div class="mb-2">
                                                                    <span class="fs-5 ps-2">{{this.name}}</span>
                                                                    {{#if this.iscreator}}
                                                                    <small class="fs-6 ps-1">(table
                                                                        administrator)</small>
                                                                    {{/if}}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {{/each}}
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-4 me-auto">
            <div class="card" id="chat1" style="border-radius: 15px;">
                <div class="card-header d-flex justify-content-between align-items-center p-3 bg-info text-white border-bottom-0"
                    style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <p class="mb-0 fw-bold">Lobby Live chat</p>
                </div>
                <div class="chat-message card-body" style="height: 500px; overflow-y: scroll;">
                </div>
                <div class="chat-form-container">
                    <form id="chat-form" class="form-outline">
                        <div class="card-footer text-muted d-flex justify-content-start align-items-center p-1">
                            <img class="mx-1 avatar avatar_{{user.avatar}}" style="width: 60px;">
                            <input id="msg" type="text" class="form-control form-control-lg mx-2"
                                placeholder="Type message" required autocomplete="off">
                            <button type="submit" class="btn btn-primary my-3">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/lobby.js"></script>